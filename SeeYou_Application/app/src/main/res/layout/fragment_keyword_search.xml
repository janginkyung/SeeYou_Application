<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/searchKeywordView"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="#f2f2f2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/searchKeywordView"
        app:layout_constraintBottom_toBottomOf="@+id/searchKeywordView"
        app:layout_constraintLeft_toLeftOf="@+id/searchKeywordView"
        app:layout_constraintRight_toLeftOf="@+id/searchKeywordImageButton"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:hint="장소를 검색해주세요"

        />

    <ImageButton
        android:id="@+id/searchKeywordImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/places_ic_search"
        app:layout_constraintRight_toRightOf="@+id/searchKeywordView"
        app:layout_constraintTop_toTopOf="@+id/searchKeywordView"
        app:layout_constraintBottom_toBottomOf="@+id/searchKeywordView"
        android:layout_marginRight="10dp"
        android:background="@null"
        />


</android.support.constraint.ConstraintLayout>